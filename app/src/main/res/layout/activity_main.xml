<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- ===== TITLE ===== -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MLBB Tutorial"
        android:textColor="@color/primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ===== LOGO CARD ===== -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogo"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/dark_black"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/IV_Logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/logo_mlbb"/>
    </androidx.cardview.widget.CardView>

    <!-- ===== MENU BUTTONS ===== -->
    <LinearLayout
        android:id="@+id/menuWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHeroes"
            android:text="HEROES"
            style="@style/MenuButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnItems"
            android:text="ITEMS"
            style="@style/MenuButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmblems"
            android:text="EMBLEMS"
            style="@style/MenuButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dbtnBattleSpells"
            android:text="Battle Spell"
            style="@style/MenuButton"/>

        <!-- ===== TENTANG ===== -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTentang"
            android:text="Tentang"
            style="@style/MenuButton"/>
    </LinearLayout>

    <!-- ===== COPYRIGHT ===== -->
    <TextView
        android:id="@+id/txtCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© 2026 MLBB Tutorial"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
