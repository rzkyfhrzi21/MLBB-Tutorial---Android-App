<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Skill Icon -->
        <ImageView
            android:id="@+id/IV_Skill"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Skill Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV_SkillName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skill Name"
                android:textColor="#64FFDA"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TV_SkillType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSIVE"
                android:textColor="#F5A623"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/TV_SkillDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skill description goes here"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:layout_marginTop="6dp" />

            <!-- Cooldown & Mana -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TV_SkillCD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CD: -"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/TV_SkillMana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Mana: -"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/TV_SkillUnique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unique effect"
                android:textColor="#9CCC65"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
