<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ===== TOP BAR (BACK + TITLE CENTER) ===== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tentang"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ===== APP INFO ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MLBB Tutorial"
            android:textColor="@color/primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="14dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versi Aplikasi : v1.0"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- ===== DESKRIPSI ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MLBB Tutorial adalah aplikasi panduan Mobile Legends: Bang Bang yang menyajikan informasi hero, skill, item, emblem, dan battle spell dalam Bahasa Indonesia."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- ===== DOSEN ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosen Pengampu / Pengarah"
            android:textColor="@color/primary"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bapak Muhammad Fauzan Azima, S.Kom., M.T.I"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- ===== DEVELOPER ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- ===== RIZKY ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/imgRizky"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rizky Fahrezi"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/igRizky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@rzkydev666"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/emailRizky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rzkyfhrzi21@gmail.com"
                    android:textColor="@color/primary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ===== ADJI ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/imgAdji"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adji Rivaldi Saputra"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/igAdji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@rrival_dii"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/emailAdji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adjirivaldi7@gmail.com"
                    android:textColor="@color/primary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ===== DEWA ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDewa"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dimas Sadewa"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/igDewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@d.dewaaaa"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/emailDewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dewarastine@gmail.com"
                    android:textColor="@color/primary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ===== SUPPORT ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Support"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/emailSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mlbbtutorialofc@gmail.com"
            android:textColor="@color/primary"/>

        <!-- ===== COPYRIGHT ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2026 MLBB Tutorial"
            android:textColor="#888888"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</ScrollView>
